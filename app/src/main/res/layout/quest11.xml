<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        style="@style/Title"
        android:text="Как изменить значение переменной, с заданным значением в программе, методом без использование return?"/>
    <Button
        android:id="@+id/isRight"
        android:layout_marginTop="50dp"
        style="@style/Button"
        android:text="👉 с помощью ссылки ref"/>

    <Button
        android:id="@+id/isFalse1"
        style="@style/Button"
        android:text="👉 с помощью out"/>

    <Button
        android:id="@+id/isFalse2"
        style="@style/Button"
        android:text="👉 при помощи break"/>

    <Button
        android:id="@+id/isFalse3"
        style="@style/Button"
        android:text="👉 это невозможно"/>
</LinearLayout>