<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        style="@style/Title"
        android:text="Что делает слово is?"/>
    <Button
        android:id="@+id/isFalse1"
        android:layout_marginTop="50dp"
        style="@style/Button"
        android:text="👉 Проверяет может ли один объект быть преобразован к другому"/>

    <Button
        android:id="@+id/isRight"
        style="@style/Button"
        android:text="👉 Проверяет может ли объект быть преобразован к классу"/>

    <Button
        android:id="@+id/isFalse2"
        style="@style/Button"
        android:text="👉 Проверяет тип объекта"/>

    <Button
        android:id="@+id/isFalse3"
        style="@style/Button"
        android:text="👉 Сравнивает относительное положение объектов в списке"/>
</LinearLayout>