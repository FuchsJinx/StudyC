<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text"
        style="@style/Title"
        android:text="18. В чем отличие массива от списка?"/>
    <Button
        android:id="@+id/isFalse1"
        android:layout_marginTop="50dp"
        style="@style/Button"
        android:text="👉 Списки статические"/>

    <Button
        android:id="@+id/isFalse3"
        style="@style/Button"
        android:text="👉 В списке можно получить доступ только к последнему элементу"/>

    <Button
        android:id="@+id/isFalse2"
        style="@style/Button"
        android:text="👉 Ничем"/>

    <Button
        android:id="@+id/isRight"
        style="@style/Button"
        android:text="👉 Списки динамические"/>
</LinearLayout>